<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:background="#ff7a00"
        android:gravity="center"
        android:text="지진발생 알림"
        android:textColor="#fff"
        android:textSize="20sp" />
</LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="24dp">

        <TextView
            android:id="@+id/info1"
            android:layout_width="162dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/Countermeasures"
            android:alpha="0.87"
            android:gravity="center"
            android:text="건물붕괴위험 :\n인명피해발생확률 :"
            android:textColor="#000"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/Level"
            android:layout_width="89dp"
            android:layout_height="52dp"
            android:layout_alignTop="@+id/info1"
            android:layout_toEndOf="@+id/info1"
            android:alpha="0.87"
            android:gravity="center"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="258dp"
            android:layout_height="191dp"
            android:layout_below="@+id/info1"
            android:layout_centerHorizontal="true"
            android:src="@drawable/table"
            android:id="@+id/table"/>

        <TextView
            android:id="@+id/Countermeasures"
            android:layout_width="256dp"
            android:layout_height="171dp"
            android:layout_below="@+id/table"
            android:layout_centerHorizontal="true"
            android:alpha="0.87"
            android:gravity="left"
            android:text="약한 지진입니다. 당황하지 마시고\n
흔들림이 멈추면 주변에 파손된 물건이 없는지 확인하세요."
            android:textColor="#000000"
            android:textSize="15sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:background="#00000000"
            android:gravity="center"
            android:onClick="mOnClose"
            android:padding="16dp"
            android:text="OK"
            android:textColor="#ff7a00"
            android:textSize="15sp" />
    </LinearLayout>

</LinearLayout>